{
   "title": "Validation Test Cases",
   "components": [
      {
         "id": "name_validation",
         "type": "textField",
         "config": {
            "label": "Họ và tên (Test: Nguyễn Văn A)",
            "placeholder": "Nhập họ và tên",
            "isRequired": true
         },
         "style": {
            "padding": "12px 16px",
            "borderColor": "#e0e0e0",
            "borderRadius": 8,
            "fontSize": 16
         },
         "inputTypes": {
            "text": {
               "validation": {
                  "regex": "^[a-zA-ZÀ-ỹ\\s]{2,50}$",
                  "error_message": "Tên không hợp lệ (2-50 ký tự, chỉ chữ cái)",
                  "min_length": 2,
                  "max_length": 50
               }
            }
         },
         "variants": {
            "withLabel": {
               "style": {
                  "labelTextSize": 14,
                  "labelColor": "#333333"
               }
            }
         },
         "states": {
            "focus": {
               "style": {
                  "borderColor": "#2196f3"
               }
            },
            "error": {
               "style": {
                  "borderColor": "#f44336"
               }
            }
         }
      },
      {
         "id": "email_validation",
         "type": "textField",
         "config": {
            "label": "Email (Test: test@example.com)",
            "placeholder": "Nhập email",
            "isRequired": true
         },
         "style": {
            "padding": "12px 16px",
            "borderColor": "#e0e0e0",
            "borderRadius": 8,
            "fontSize": 16
         },
         "inputTypes": {
            "email": {
               "validation": {
                  "regex": "^[^@]+@[^@]+\\.[^@]+$",
                  "error_message": "Email không đúng định dạng",
                  "min_length": 5,
                  "max_length": 50
               }
            }
         },
         "variants": {
            "withLabel": {
               "style": {
                  "labelTextSize": 14,
                  "labelColor": "#333333"
               }
            }
         },
         "states": {
            "focus": {
               "style": {
                  "borderColor": "#2196f3"
               }
            },
            "error": {
               "style": {
                  "borderColor": "#f44336"
               }
            }
         }
      },
      {
         "id": "password_validation",
         "type": "textField",
         "config": {
            "label": "Mật khẩu (Test: Password123)",
            "placeholder": "Nhập mật khẩu",
            "isRequired": true
         },
         "style": {
            "padding": "12px 16px",
            "borderColor": "#e0e0e0",
            "borderRadius": 8,
            "fontSize": 16
         },
         "inputTypes": {
            "password": {
               "validation": {
                  "regex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{6,}$",
                  "error_message": "Mật khẩu phải từ 6 ký tự, gồm chữ và số",
                  "min_length": 6,
                  "max_length": 32
               }
            }
         },
         "variants": {
            "withLabel": {
               "style": {
                  "labelTextSize": 14,
                  "labelColor": "#333333"
               }
            }
         },
         "states": {
            "focus": {
               "style": {
                  "borderColor": "#2196f3"
               }
            },
            "error": {
               "style": {
                  "borderColor": "#f44336"
               }
            }
         }
      },
      {
         "id": "phone_validation",
         "type": "textField",
         "config": {
            "label": "Số điện thoại (Test: 0123456789)",
            "placeholder": "Nhập số điện thoại",
            "isRequired": false
         },
         "style": {
            "padding": "12px 16px",
            "borderColor": "#e0e0e0",
            "borderRadius": 8,
            "fontSize": 16
         },
         "inputTypes": {
            "tel": {
               "validation": {
                  "regex": "^(0|\\+84)(3[2-9]|5[2689]|7[06-9]|8[1-689]|9[0-9])([0-9]{7})$",
                  "error_message": "Số điện thoại không hợp lệ",
                  "min_length": 10,
                  "max_length": 12
               }
            }
         },
         "variants": {
            "withLabel": {
               "style": {
                  "labelTextSize": 14,
                  "labelColor": "#333333"
               }
            }
         },
         "states": {
            "focus": {
               "style": {
                  "borderColor": "#2196f3"
               }
            },
            "error": {
               "style": {
                  "borderColor": "#f44336"
               }
            }
         }
      },
      {
         "id": "test_button",
         "type": "button",
         "config": {
            "text": "Test Validation",
            "action": "test"
         },
         "style": {
            "padding": "12px 24px",
            "backgroundColor": "#2196f3",
            "color": "#ffffff",
            "borderRadius": 8,
            "fontSize": 16,
            "fontWeight": "bold",
            "margin": "16px 0"
         },
         "variants": {
            "primary": {
               "style": {
                  "backgroundColor": "#2196f3"
               }
            },
            "success": {
               "style": {
                  "backgroundColor": "#28a745"
               }
            }
         },
         "states": {
            "default": {
               "style": {
                  "backgroundColor": "#2196f3"
               }
            },
            "hover": {
               "style": {
                  "backgroundColor": "#1976d2"
               }
            }
         }
      },
      {
         "id": "test_info",
         "type": "text",
         "config": {
            "text": "Test Cases:\n1. Name: 'Nguyễn Văn A' ✅ | 'A' ❌ | '123' ❌\n2. Email: 'test@example.com' ✅ | 'invalid' ❌\n3. Password: 'Password123' ✅ | '123456' ❌ | 'abcdef' ❌\n4. Phone: '0123456789' ✅ | '123' ❌"
         },
         "style": {
            "padding": "16px",
            "color": "#666666",
            "fontSize": 12,
            "textAlign": "left",
            "backgroundColor": "#f8f9fa",
            "borderRadius": 8,
            "margin": "16px 0",
            "fontFamily": "monospace"
         }
      }
   ]
}
