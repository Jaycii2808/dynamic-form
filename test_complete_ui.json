{
   "title": "Complete UI Test Page",
   "components": [
      {
         "id": "text_input_template",
         "type": "textField",
         "title": "Input Template",
         "order": 0,
         "config": {
            "label": "Working remotely",
            "placeholder": "Enter your text here",
            "editable": true,
            "isRequired": false,
            "value": null,
            "metaData": null,
            "numberOfMedia": null,
            "url": null
         },
         "style": {
            "padding": "10px 12px",
            "borderColor": "#dddddd",
            "borderRadius": 4,
            "fontSize": 14,
            "color": "#333333",
            "backgroundColor": "#ffffff"
         },
         "inputTypes": {
            "text": {
               "validation": {
                  "regex": "^[a-zA-ZÀ-ỹ\\s]{2,50}$",
                  "error_message": "Tên không hợp lệ (2-50 ký tự, chỉ chữ cái)",
                  "max_length": 50,
                  "min_length": 2
               }
            },
            "email": {
               "validation": {
                  "regex": "^[^@]+@[^@]+\\.[^@]+$",
                  "error_message": "Email không đúng định dạng",
                  "max_length": 50,
                  "min_length": 5
               }
            },
            "password": {
               "validation": {
                  "regex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{6,}$",
                  "error_message": "Mật khẩu phải từ 6 ký tự, gồm chữ và số",
                  "max_length": 32,
                  "min_length": 6
               }
            },
            "tel": {
               "validation": {
                  "regex": "^(0|\\+84)(3[2-9]|5[2689]|7[06-9]|8[1-689]|9[0-9])([0-9]{7})$",
                  "error_message": "Số điện thoại không hợp lệ",
                  "max_length": 12,
                  "min_length": 10
               }
            }
         },
         "variants": {
            "normal": {
               "style": {}
            },
            "withIcon": {
               "style": {
                  "iconPosition": "left",
                  "iconSize": 12
               }
            },
            "withLabel": {
               "style": {
                  "labelTextSize": 12,
                  "labelColor": "#dddddd"
               }
            }
         },
         "states": {
            "default": {
               "style": {
                  "borderColor": "#dddddd"
               }
            },
            "focus": {
               "style": {
                  "borderColor": "#007bff",
                  "shadow": ""
               }
            },
            "disabled": {
               "style": {
                  "borderColor": "#cccccc",
                  "backgroundColor": "#f5f5f5"
               }
            }
